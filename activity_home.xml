<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white">


    <Button
        android:id="@+id/guide"
        android:layout_width="289dp"
        android:layout_height="240dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#43D3BF"
        android:text="GUIDE"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/start_planting"
        android:layout_width="289dp"
        android:layout_height="240dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#43D3BF"
        android:text="START PLANTING"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/ngo_list"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/ngo_list"
        android:layout_width="289dp"
        android:layout_height="240dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#43D3BF"
        android:text="DONATE MONEY THROUGH NGO'S"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/rewards"
        android:layout_width="118dp"
        android:layout_height="180dp"
        android:backgroundTint="#D3D3D3"
        android:text="REWARDS"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/notif"
        android:layout_width="118dp"
        android:layout_height="180dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#D3D3D3"
        android:text="NOTIFICATIONS"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rewards" />

    <Button
        android:id="@+id/gallery"
        android:layout_width="118dp"
        android:layout_height="176dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#D3D3D3"
        android:text="GALLERY"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notif" />

    <Button
        android:id="@+id/camera"
        android:layout_width="114dp"
        android:layout_height="180dp"
        android:backgroundTint="#D3D3D3"
        android:text="CAMERA"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button9"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>